@model IntelliPack.DataAccessLayer.Models.Packages
@{
    ViewBag.Title = "InvoceManager";
    Layout = "";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Recibo de Factura</title>
    <link href="@Url.Content("~/Content/plugins/transactional-email-templates/templates/styles.css")" media="all" rel="stylesheet" type="text/css" />
</head>

<body itemscope=itemscope itemtype="http://schema.org/EmailMessage">

    <table class="body-wrap">
        <tr>
            <td></td>
            <td class="container" width="600">
                <div class="content">
                    <table class="main" width="100%" cellpadding="0" cellspacing="0">
                        <tr>
                            <td class="alert alert-good">
                                <strong>Intelli Cargo & Logistic, SRL - RNC #131443656</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="content-wrap aligncenter">
                                <table width="100%" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td class="content-block aligncenter">
                                            <table class="invoice">
                                                <tr>
                                                    <td><strong>@Model.name @Model.last_name</strong><br />Factura #@Model.secuencia_id<br />
                                                        
                                                    @(DateTime.Now.ToString("YYYY-MM-dd"))</td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <table class="invoice-items" cellpadding="0" cellspacing="0">
                                                            <tr>
                                                                <td>Service 1</td>
                                                                <td class="alignright">$ 19.99</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Service 2</td>
                                                                <td class="alignright">$ 9.99</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Service 3</td>
                                                                <td class="alignright">$ 4.00</td>
                                                            </tr>
                                                            <tr class="total">
                                                                <td class="alignright" width="80%">Total</td>
                                                                <td class="alignright">$ 33.98</td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="content-block aligncenter">
                                            <a style="cursor:pointer;"  onclick="javascript: window.print();">Imprimir</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="content-block aligncenter">
                                            Calle Juan Marichal no 22 Los Rios, Santo Domingo DN
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <div class="footer">
                        <table width="100%">
                            <tr>
                                <td class="aligncenter content-block">©@DateTime.Now.Year.ToString() <a href="mailto:edgarleonardo@IntelliPaq.com" target="_blank"><strong>Intelli Cargo & Logistic, SRL</strong></a></td>
                            </tr>
                            
                        </table>
                    </div>
                </div>
            </td>
            <td></td>
        </tr>
    </table>

</body>
</html>


