@model IntelliPack.DataAccessLayer.Models.Packages
<!-- Modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Editar</h4>
            </div>
            <div class="modal-body">
                <form id="AddConfigUpdate">
                    @Html.AntiForgeryToken()
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.workflowid)
                                    @Html.HiddenFor(m => m.usersId)
                                    @Html.HiddenFor(m => m.WH)
                                    @Html.HiddenFor(m => m.tracking_code)
                                    @Html.HiddenFor(m => m.total_courier)
                                    @Html.HiddenFor(m => m.Moneda)      
                                    @Html.HiddenFor(m => m.CostoTotal)                                  
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Accion:</label>
                                   @Html.DropDownListFor(m => m.status_code, new List<SelectListItem>
                                                                             {
                                                                                //new SelectListItem{ Text="Eliminado", Value = "2" },
                                                                                new SelectListItem{ Text="Facturar", Value = "1" },
                                                                                new SelectListItem{ Text="Devolver", Value = "5" }
                                                                             }, new { @class = "form-control", @id = "status_code" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Tracking Code:</label>
                                    @Html.TextBoxFor(m => m.tracking_code, new { @class = "form-control", @id = "tracking_code", @readonly="true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Cliente:</label>
                                        @Html.TextBoxFor(m => m.consignado, new { @class = "form-control", @id = "consignado", @readonly = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Origen:</label>
                                    @Html.TextBoxFor(m => m.origen, new { @class = "form-control", @id = "origen", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Tienda:</label>
                                        @Html.TextBoxFor(m => m.tienda, new { @class = "form-control", @id = "tienda", @readonly = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Contenido:</label>
                                    @Html.TextBoxFor(m => m.contenido, new { @class = "form-control", @id = "contenido", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label class="control-label" style="font-weight:bold;">correo:</label>
                                            @Html.TextBoxFor(m => m.correo, new { @class = "form-control", @id = "correo", @readonly = "true" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Seguro:</label>

                                    <input type="text" class="form-control" id="SeguroMonto" name="SeguroMonto" value="@Model.SeguroMonto" readonly="true" />
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Libras:</label>
                                        @Html.TextBoxFor(m => m.peso, new { @class = "form-control", @id = "peso", @readonly = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Costo X Libras:</label>
                                    @Html.TextBoxFor(m => m.precioXLibraCliente, new { @class = "form-control", @id = "precioXLibraCliente", @readonly = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Manejo:</label>
                                        @Html.TextBoxFor(m => m.manejo, new { @class = "form-control", @id = "manejo", @readonly = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Cargo Courier:</label>
                                    @Html.TextBox("CourierCharge", (Model.total - Model.total_courier), new { @class = "form-control", @id = "CourierCharge" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Total:</label>
                                        <input type="text" class="form-control" id="TotalCostoXLibra" name="total" readonly="true" />                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;width:100%;height:100%;">Comentarios:</label>
                                    @Html.TextAreaFor(g => g.Comments, new { @class = "form-control", @id = "Comments" })
                                </div>                            
                        </div>
                        <input type="hidden" value="@Model.total_courier" id="realvalSub" name="realvalSub" />
                    <input type="hidden" value="@ViewBag.Id" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <span id="spnModalConfigInformation" style="color:red;"></span>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSaveModify" onclick="saveModalConfigInfo(this, 'spnModalConfigInformation', '@(Url.Action("InvoceManagerInfo", "Packages", new { Id = Model.WH,tracking = Model.tracking_code, userId = Model.courierId}))', $('#status_code option:selected').val(), '@(Url.Action("PackageById", "Packages", new { CustId = ViewBag.userIdInfo}))');" data-url="@(Url.Action("Add", "Packages"))">Procesar</button>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script type="text/javascript">
    $().ready(function () {
        // validate the contact form when it is submitted
        $("#AddConfigUpdate").validate({

            rules: {
                consignado: { required: true }
            },
            messages: {
                consignado: "* Campo obligatorio"
            }
        });

        $("#CourierCharge").keyup(function () {
            CostoPorLibras();
        });
        CostoPorLibras();
    });
    
    function CostoPorLibras()
    {        
        var precioXLibraCliente = $("#precioXLibraCliente").val();
        var valorCostoXLibra = $("#CourierCharge").val();
        var valomanejo = $("#manejo").val();
        var valorPeso = $("#peso").val();
        var SeguroMonto = $("#SeguroMonto").val(); 
        var realvalSub = $("#realvalSub").val();
        if (!$.isNumeric(valorCostoXLibra)) {
            valorCostoXLibra = 0;
        }
        if (!$.isNumeric(valomanejo)) {
            valomanejo = 0;
        }
        if (!$.isNumeric(valorPeso)) {
            valorPeso = 0;
        }
        
        var numberResults = parseFloat(valorCostoXLibra) + parseFloat(realvalSub) ;
        $("#TotalCostoXLibra").val(numberResults.toFixed(3));
    }
</script>


