@model IntelliPack.DataAccessLayer.Models.Reclamaciones
<div class="panel">
    <div class="panel-heading">
        <div class="panel-control">
            <a class="fa fa-question-circle fa-lg fa-fw unselectable add-tooltip" href="#" data-original-title="<h4 class='text-thin'>Información</h4><p style='width:150px'>Este modulo muestra los Modulos informacion de los paquetes activos en sistema.</p>" data-html="true" title=""></a>
        </div>
        <h3 class="panel-title"> Reclamaciones</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RECL_ID)
            @Html.HiddenFor(model => model.UsersId)
            @Html.HiddenFor(model => model.CourierId)
            @Html.HiddenFor(model => model.StatusId)

            <div class="form-group">
                <label class="control-label col-md-2" for="AnswerInfo">Respuesta</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.AnswerInfo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnswerInfo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Subject">Motivo</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Description">Descripción</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="AnswerInfo">Respuesta</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.AnswerInfo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnswerInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ID">Email Cliente</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailCust, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.EmailCust, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ID">Email Courier</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailCourier, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.EmailCourier, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ID">Estado</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.status_description, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })

                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Editar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        <div>
            @Html.ActionLink("Volver Atrás", "Manage")
        </div>
    </div>

    </div>